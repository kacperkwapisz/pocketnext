{
  "name": "pocketnext-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo check-types",
    "setup": "pnpm install && turbo run setup",
    "setup:bun": "bun install && turbo run setup",
    "setup:admin": "turbo run setup:admin --filter=@repo/pocketbase",
    "typegen": "turbo run typegen --filter=@repo/db"
  },
  "devDependencies": {
    "pocketbase-typegen": "^1.2.1",
    "prettier": "^3.5.0",
    "turbo": "^2.4.4",
    "typescript": "5.7.3"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "workspaces": [
    "apps/*",
    "packages/*",
    "pb"
  ]
}
