{
  "name": "pocketnext",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run dev:pb\" \"npm run dev:next\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typegen": "npx pocketbase-typegen --out ./src/lib/pocketbase/types.ts --env",
    "dev:pb": "cross-env PB_VERSION=0.19.4 ./scripts/run-pocketbase.sh",
    "dev:next": "next dev --turbopack",
    "dev:pb:admin": "cross-env PB_VERSION=0.19.4 ./scripts/setup-pb-admin.sh",
    "setup": "npm install && ./scripts/download-pocketbase.sh",
    "setup:db": "./scripts/download-pocketbase.sh",
    "setup:admin": "./scripts/setup-pb-admin.sh"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "lucide-react": "^0.477.0",
    "next": "15.2.0",
    "pocketbase": "^0.25.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.2.0",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "prettier": "^3.5.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}