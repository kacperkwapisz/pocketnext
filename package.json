{
  "name": "pocketnext",
  "version": "0.6.0",
  "description": "Create Next.js + PocketBase projects with an interactive setup experience",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "main": "dist/cli/index.js",
  "types": "dist/cli/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/cli/index.d.ts",
      "default": "./dist/cli/index.js"
    }
  },
  "bin": {
    "pocketnext": "./dist/bin/pocketnext.js",
    "pocketnext@latest": "./dist/bin/pocketnext.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "start": "node dist/bin/pocketnext.js",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cli": "vitest run test/utils/cli.test.ts --pool=fork",
    "test:basic": "vitest run test/basic.test.ts",
    "test:cli:basic": "vitest run test/utils/cli.basic.test.ts",
    "test:create:basic": "vitest run test/core/create-project.basic.test.ts",
    "test:template:basic": "vitest run test/utils/template.basic.test.ts",
    "test:all:basic": "vitest run test/basic.test.ts test/utils/cli.basic.test.ts test/core/create-project.basic.test.ts test/utils/template.basic.test.ts"
  },
  "keywords": [
    "nextjs",
    "pocketbase",
    "cli",
    "generator",
    "template"
  ],
  "author": "Kacper Kwapisz",
  "license": "MIT",
  "dependencies": {
    "@types/prompts": "^2.4.9",
    "@types/validate-npm-package-name": "^4.0.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "events": "^3.3.0",
    "execa": "^8.0.1",
    "fs-extra": "^11.2.0",
    "got": "^14.4.6",
    "inquirer": "^9.2.12",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "tar": "^6.2.0",
    "validate-npm-package-name": "^5.0.0"
  },
  "devDependencies": {
    "prettier": "^3.5.0",
    "rimraf": "^5.0.5",
    "tsup": "^7.2.0",
    "typescript": "5.7.3",
    "vitest": "^3.0.7",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kacperkwapisz/pocketnext.git"
  },
  "bugs": {
    "url": "https://github.com/kacperkwapisz/pocketnext/issues"
  },
  "homepage": "https://github.com/kacperkwapisz/pocketnext#readme"
}
